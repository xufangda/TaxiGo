<!-- map.wxml -->
<view class="page">
  <view class="navibar">
    <view class="navibar-content">
      <button class="navibar-input"><icon type="search" size="14"/> 搜索位置 </button>
    </view>
  </view>
  
  <view class="map-container">
    <map id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="14" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" polyline="{{polyline}}" bindregionchange="regionchange" show-location style="width: 100%; height: 250px;"></map>
  </view>
  <view class="search-result">
  {{latitude}}
  </view>
</view>


